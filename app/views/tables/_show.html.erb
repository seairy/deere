<div class="block block-condensed">
  <div class="app-heading app-heading-small">
    <div class="title">
      <h2><%= table.model.name %> Table</h2>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-head-light margin-bottom-0">
      <thead>
        <tr>
          <th><%= ara_t 'table_element.type' %></th>
          <th><%= ara_t 'table_element.property' %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% table.elements.sorted.each do |table_element| %>
        <tr>
          <td><%= table_element.model_name.human %></td>
          <td><%= table_element.property.model.name %>#<%= table_element.property.name %></td>
          <td class="actions">
            <%= link_to raw('<i class="fa fa-times"></i>'), table_element, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-icon' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block-footer">
    <div class="btn-group dropup margin-right-5">
      <button type="button" class="btn btn-default">Action</button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'New Regular Column', new_table_regular_column_path(table) %></li>
        <li><%= link_to 'New Popover Column', new_table_popover_column_path(table) %></li>
        <li><%= link_to 'New Modal Column', '' %></li>
        <li role="separator" class="divider"></li>
        <li><%= link_to "Sort", sort_table_table_elements_path(table) %></li>
      </ul>
    </div>
  </div>
</div>
<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= render "common/error_messages", target: @table %>
  <%= form_for @table, html: { class: 'form-horizontal' } do |f| %>
    <%= hidden_field_tag :view_logic_id, @view_logic.id %>
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>New <%= arm_t('table') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'table.include_sequence_number' %> <span class="required">*</span></label>
          <div class="col-sm-6">
            <div class="app-radio inline round">
              <label><%= f.radio_button :include_sequence_number, true %> Yes</label>
            </div>
            <div class="app-radio inline round">
              <label><%= f.radio_button :include_sequence_number, false, checked: true %> No</label>
            </div>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Return', @view_logic, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>

<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Resourceful Controller</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= render "common/error_messages", target: @resourceful_controller %>
  <%= form_for @resourceful_controller, html: { class: 'form-horizontal' } do |f| %>
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>New <%= arm_t('resourceful_controller') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'resourceful_controller.namespace' %></label>
          <div class="col-sm-6">
            <%= f.collection_select :namespace_id, @current_project.namespaces, :id, :name, {}, class: 'form-control s2-select' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'resourceful_controller.model' %></label>
          <div class="col-sm-6">
            <%= f.collection_select :model_id, @current_project.models, :id, :name, {}, class: 'form-control s2-select' %>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Return', resourceful_controllers_path, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
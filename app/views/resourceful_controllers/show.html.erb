<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
  <div class="heading-elements">
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-default">New</button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'Retrieve Collection', '' %></li>
        <li><%= link_to 'Retrieve Element', '' %></li>
        <li><%= link_to 'Individual Creation', new_resourceful_controller_individual_creation_path(@resourceful_controller) %></li>
        <li><%= link_to 'Individual Updation', '' %></li>
        <li><%= link_to 'Individual Deletion', '' %></li>
        <li><%= link_to 'Bulk Creation', '' %></li>
        <li><%= link_to 'Bulk Updation', '' %></li>
        <li><%= link_to 'Bulk Deletion', '' %></li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <%= styled_flash %>
  <form class="form-horizontal">
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>View <%= arm_t(@resourceful_controller.model_name.human) %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'resourceful_controller.namespace' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @resourceful_controller.namespace.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'resourceful_controller.model' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @resourceful_controller.model.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'resourceful_controller.individual_creation' %></label>
          <div class="col-sm-6">
            <div class="input-group">
              <%= text_field_tag nil, boolean_formatter(@resourceful_controller.individual_creation.present?), readonly: true, class: 'form-control' %>
              <% if @resourceful_controller.individual_creation.blank? %>
              <span class="input-group-btn">
                <%= link_to raw('<i class="fa fa-plus"></i>'), new_resourceful_controller_individual_creation_path(@resourceful_controller), class: 'btn btn-default' %>
              </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= link_to 'Destroy', @resourceful_controller, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Return', resourceful_controllers_path, class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </form>
</div>

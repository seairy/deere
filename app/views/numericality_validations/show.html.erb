<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= styled_flash %>
  <form class="form-horizontal">
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>View <%= arm_t('numericality_validation') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'numericality_validation.property' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @numericality_validation.property.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'numericality_validation.range' %></label>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon">MIN</span>
              <%= text_field_tag nil, @numericality_validation.minimum, readonly: true, class: 'form-control' %>
              <% if @numericality_validation.includes_minimum %>
              <span class="input-group-addon">(inc)</span>
              <% end %>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="input-group">
              <span class="input-group-addon">MAX</span>
              <%= text_field_tag nil, @numericality_validation.maximum, readonly: true, class: 'form-control' %>
              <% if @numericality_validation.includes_maximum %>
              <span class="input-group-addon">(inc)</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= link_to 'Edit', edit_numericality_validation_path(@numericality_validation), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', @numericality_validation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Return', @numericality_validation.property.model, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  </form>
</div>

<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= render "common/error_messages", target: @uniqueness_validation %>
  <%= form_for @uniqueness_validation, html: { class: 'form-horizontal' } do |f| %>
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>Edit <%= arm_t('uniqueness_validation') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'uniqueness_validation.property' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @uniqueness_validation.property.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'uniqueness_validation.scopes' %></label>
          <div class="col-sm-6">
            <%= f.text_field :scopes, value: @uniqueness_validation.scopes.join(','), data: { role: 'tagsinput' }, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
        <%= link_to 'Return', @uniqueness_validation.property.model, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>

<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= render "common/error_messages", target: @exclusion_validation %>
  <%= form_for [@property, @exclusion_validation], url: property_exclusion_validations_path(@property, @exclusion_validation), html: { class: 'form-horizontal' } do |f| %>
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>New <%= arm_t('exclusion_validation') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'exclusion_validation.property_en_name' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @property.en_name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'exclusion_validation.values' %></label>
          <div class="col-sm-6">
            <%= f.text_field :values, value: @exclusion_validation.values.join(','), data: { role: 'tagsinput' }, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Return', @property.model, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>

<div class="block block-condensed">
  <div class="app-heading app-heading-small">
    <div class="title">
      <h2><%= form.model.name %> Form</h2>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-head-light margin-bottom-0">
      <thead>
        <tr>
          <th><%= ara_t 'form_element.type' %></th>
          <th><%= ara_t 'form_element.property' %></th>
          <th><%= ara_t 'form_element.options' %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% form.elements.sorted.each do |form_element| %>
        <tr>
          <td><%= form_element.model_name.human %></td>
          <td><%= form_element.property.model.name %>#<%= form_element.property.name %></td>
          <td></td>
          <td class="actions">
            <%= link_to raw('<i class="fa fa-pencil"></i>'), send("edit_#{form_element.class.to_s.underscore}_path", form_element), class: 'btn btn-default btn-icon' %>
            <%= link_to raw('<i class="fa fa-times"></i>'), form_element, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-icon' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block-footer">
    <div class="btn-group dropup margin-right-5">
      <button type="button" class="btn btn-default">Action</button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to 'New Regular Row', new_form_regular_row_path(form) %></li>
        <li><%= link_to 'New Image Row', new_form_image_row_path(form) %></li>
        <li role="separator" class="divider"></li>
        <li><%= link_to "Sort", sort_form_form_elements_path(form) %></li>
      </ul>
    </div>
  </div>
</div>
    
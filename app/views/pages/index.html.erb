<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
  <div class="heading-elements">
    <%= link_to 'New', new_page_path, class: 'btn btn-default' %>
  </div>
</div>
<div class="container">
  <div class="block block-condensed">
    <div class="app-heading">
      <div class="title">
        <h2><%= arm_t('page') %> List</h2>
      </div>
    </div>
    <% if @pages.present? %>
    <div class="table-responsive">
      <table class="table table-head-light margin-bottom-0">
        <thead>
          <tr>
            <th><%= ara_t 'page.namespace' %></th>
            <th><%= ara_t 'page.name' %></th>
            <th><%= ara_t 'page.localized_name' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
          <tr>
            <td><%= page.namespace.name %></td>
            <td><%= page.name %></td>
            <td><%= page.localized_name %></td>
            <td class="actions">
              <%= link_to raw('<i class="fa fa-file-text-o"></i>'), page_path(page, from: 'destination'), class: 'btn btn-default btn-icon' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>

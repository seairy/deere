<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>Models</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= styled_flash %>
  <form class="form-horizontal">
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>View <%= arm_t('confirmation_validation') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'confirmation_validation.property' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @confirmation_validation.property.en_name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'confirmation_validation.case_sensitive' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, boolean_formatter(@confirmation_validation.case_sensitive), readonly: true, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= link_to 'Edit', edit_confirmation_validation_path(@confirmation_validation), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', @confirmation_validation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Return', @confirmation_validation.property.model, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  </form>
</div>

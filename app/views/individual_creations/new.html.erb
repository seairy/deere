<div class="app-heading app-heading-bordered app-heading-page">
  <div class="title">
    <h1>R Controllers</h1>
    <p><%= @page_metadata %></p>
  </div>
</div>
<div class="container">
  <%= render "common/error_messages", target: @individual_creation %>
  <%= form_for [@resourceful_controller, @individual_creation], html: { class: 'form-horizontal' } do |f| %>
    <div class="block block-condensed">
      <div class="app-heading app-heading-small">
        <div class="title">
          <h2>New <%= arm_t('individual_creation') %></h2>
        </div>
      </div>
      <div class="block-content">
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'individual_creation.resourceful_controller' %></label>
          <div class="col-sm-6">
            <%= text_field_tag nil, @resourceful_controller.model.name, readonly: true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'individual_creation.type' %> <span class="required">*</span></label>
          <div class="col-sm-6">
            <%= f.select :type, IndividualCreation.type.options, {}, class: 'form-control s2-select' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'individual_creation.nested_model_as_parent' %></label>
          <div class="col-sm-6">
            <%= f.collection_select :nested_model_as_parent_id, @resourceful_controller.model.cascades_as_destination, :id, :source_name, { prompt: '<Select>' }, class: 'form-control s2-select' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= ara_t 'individual_creation.confirmable' %> <span class="required">*</span></label>
          <div class="col-sm-6">
            <div class="app-radio inline round">
              <label><%= f.radio_button :confirmable, true %> Yes</label>
            </div>
            <div class="app-radio inline round">
              <label><%= f.radio_button :confirmable, false %> No</label>
            </div>
          </div>
        </div>
      </div>
      <div class="block-footer">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Return', @resourceful_controller, class: 'pull-right btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
